#!/bin/bash
set -euo pipefail

# Install IJava kernel for Jupyter
echo "Installing IJava kernel..."

# Download and install IJava
curl -L https://github.com/SpencerPark/IJava/releases/download/v1.3.0/ijava-1.3.0.zip -o ijava-1.3.0.zip
unzip ijava-1.3.0.zip
python install.py --sys-prefix

# Clean up
rm ijava-1.3.0.zip
rm -rf java/
rm install.py

echo "IJava kernel installed successfully!"

# Verify installation
jupyter kernelspec list
